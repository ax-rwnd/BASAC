<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:background="#FFFFFF" >

   <ImageView android:layout_width="200sp"
              android:layout_height="50sp"
              android:layout_gravity="center"
              android:layout_margin="5dp"
              android:paddingTop="15dp"
              android:src="@drawable/ccn_lite_logo_712x184"/>

    <TextView android:id="@+id/transport"
              android:layout_width="fill_parent"
              android:layout_height="20dp"
              android:paddingTop="5dp"
              android:paddingLeft="3dp"
              android:textSize="10sp"
              android:textColor="#808080"
              />

    <TextView android:id="@+id/loglink"
              android:layout_width="fill_parent"
              android:layout_height="25dp"
              android:paddingLeft="3dp"
              android:paddingBottom="10dp"
              android:textSize="10sp"
              android:textColor="#808080"
              />

    <ListView android:id="@+id/listview"
              android:layout_width="fill_parent"
              android:layout_height="20dp"
              android:layout_weight="3"
              android:background="#ffd763"
              android:textSize="10sp"
              android:divider="#ffd763"
              android:dividerHeight="1px"
              android:listSelector="@android:color/transparent"
              android:cacheColorHint="@android:color/transparent"
              android:transcriptMode="alwaysScroll"
              android:stackFromBottom="true"
              />

  <LinearLayout android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:paddingRight="2dp"
                android:background="#dfb743"
                android:textColor="#000000"
                >

    <TextView android:id="@+id/debuglevel"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_margin="3dp"
              android:layout_marginLeft="6dp"
              android:textSize="10sp"
              android:textColor="#000000"
              android:text=" 5" />

    <Button android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="3dp"
            android:background="#cf9723"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text=" -- "
            />
    <Button android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="3dp"
            android:background="#cf9723"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text=" ++ " />
    <Button android:id="@+id/dump"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:background="#cf9723"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text=" memdump " />

  </LinearLayout>

</LinearLayout>
