<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_data_screen" tools:context="d0020e.basac.DataScreenActivity">

    <ProgressBar
        android:id="@+id/oxygen_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginRight="5dp"
        />
    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/current_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/strut"
        android:layout_alignParentStart="true"
        android:layout_below="@id/oxygen_bar"
        android:text="@string/current_value"/>

    <TextView
        android:id="@+id/oxygen_threshold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/strut"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/oxygen_bar"
        android:text="@string/oxygen_threshold"/>


    <Button
        android:id="@+id/action_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_value"
        android:text="Increment"
        />

    <ProgressBar
        android:id="@+id/accelerometer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginRight="5dp"
        />

    <View android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/accel_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/strut2"
        android:layout_alignParentStart="true"
        android:layout_below="@id/accelerometer_bar"
        android:text="@string/accel_value"/>

    <TextView
        android:id="@+id/accel_threshold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/strut"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/accelerometer_bar"
        android:text="@string/accel_threshold"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accel_seekBar"
        android:layout_marginTop="45dp"
        android:progressTint="@android:color/transparent"
        android:layout_below="@+id/accel_value"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <!-- <ProgressBar
         android:id="@+id/humidity_bar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/accel_threshold"
         style="@android:style/Widget.ProgressBar.Horizontal"
         android:layout_marginRight="5dp"
         /> -->


</RelativeLayout>
