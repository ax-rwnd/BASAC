<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".bluetooth2.BluetoothScreenActivity">

    <TextView android:id="@+id/title_paired_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Paired devices"
        android:paddingTop="3dp"
        android:paddingLeft="5dp"
        />
    <ListView android:id="@+id/bt_paired_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="false"
        android:layout_weight="2"
        />
    <TextView android:id="@+id/title_new_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New devices"
        android:paddingTop="3dp"
        android:paddingLeft="5dp"
        />
    <ListView android:id="@+id/bt_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="false"
        android:layout_weight="1"
        />
    <TextView android:id="@+id/bt_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        />
    <Button android:id="@+id/button_scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rescan"
        android:onClick="bt_rescan"
        />


</LinearLayout>
