<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_weight="5"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home_screen"
    android:clickable="false"
    android:orientation="horizontal">

    <Button
        android:id="@+id/action_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_info"
        android:onClick="startDataScreen"
        android:textSize="60dp"/>

    <Button
        android:id="@+id/action_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_data"
        android:text="@string/button_functions"
        android:onClick="startSettingsScreen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings"
        android:id="@+id/settings"
        android:layout_below="@+id/action_settings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
